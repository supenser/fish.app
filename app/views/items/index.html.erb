<!--メイン-->
<%= render "shared/header" %>
  <div class="fv-container">
    
      <%# 商品一覧 %>
    <div class='item-contents'>
        <h2 class='title'>本日のお魚はこちら</h2>
        <ul class='item-lists'>
            <% @items.each do |i| %>
                <li class='list'>
                    <div class='item-img-content'>
                    <%= image_tag i.image, class: "item-img" %>
                        <div class='item-info'>
                            <h3 class='item-name'>
                            <%= i.title %>
                            </h3>
                            <div class='item-price'>
                            <span><%= i.price %>円<br></span>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
  </div>
<%= render "shared/footer" %>